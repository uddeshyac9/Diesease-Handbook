      "topic": "HYPOTHYROIDISM",
      "definition": "A condition where the thyroid gland fails to produce sufficient thyroid hormones, affecting growth, metabolism, and neurodevelopment.",
      "types": [
        {
          "type": "Congenital (CH)",
          "description": "Present at birth – most common preventable cause of mental retardation"
        },
        {
          "type": "Acquired",
          "description": "Occurs later – often due to autoimmune thyroiditis (Hashimoto's)"
        }
      ],
      "causes": {
        "Congenital": [
          "Thyroid dysgenesis (agenesis, ectopia)",
          "Dyshormonogenesis (enzyme defects)",
          "TSH receptor mutations",
          "Maternal iodine deficiency",
          "Maternal antithyroid drugs"
        ],
        "Acquired": [
          "Autoimmune thyroiditis (most common)",
          "Iodine deficiency or excess",
          "Radiation, thyroid surgery",
          "Drugs (lithium, amiodarone)"
        ]
      },
      "clinical_features": {
        "Congenital": {
          "Early Signs": [
            "Prolonged jaundice",
            "Large posterior fontanelle",
            "Constipation",
            "Hypotonia",
            "Umbilical hernia"
          ],
          "Late Signs": [
            "Coarse facies",
            "Developmental delay",
            "Macroglossia",
            "Delayed milestones, stunted growth",
            "Puffy face, dry skin"
