{
  "title": "GROWTH AND DEVELOPMENT IN CHILDREN",
  "definition": {
    "growth": "Quantitative increase in physical parameters like height, weight, head circumference, etc.",
    "development": "Qualitative improvement in function, skills, and capacities (e.g., cognition, motor, social)",
    "maturation": "Progress toward full functional capacity"
  },
  "importance": [
    "Tracks health and nutrition",
    "Detects early signs of illness or developmental delay",
    "Helps in age-appropriate parenting and stimulation",
    "Basis for growth charts, milestones, and national health programs"
  ],
  "determinants": {
    "intrinsic": [
      "Genetics",
      "Endocrines (GH, thyroid)",
      "Intrauterine environment",
      "Sex (boys grow more initially)",
      "Ethnicity"
    ],
    "extrinsic": [
      "Nutrition (breastfeeding, complementary)",
      "Socioeconomic status",
      "Infections (e.g., TORCH)",
      "Parental care, stimulation",
      "Environment, access to health services"
    ]
  },
  "growth_monitoring_parameters": {
    "weight": {
      "expected": [
        {"age": "Birth", "weight": "~2.5–3.5 kg"},
        {"age": "5 months", "weight": "Double birth weight"},
        {"age": "1 year", "weight": "Triple birth weight"},
        {"age": "2 years", "weight": "Quadruple birth weight"},
        {"age": "3–12 yrs", "weight": "~2–2.5 kg/year gain"}
      ],
      "formula": "Weight (kg) = 2 × (Age in years + 4) [1–7 yrs]"
    },
    "height": {
      "expected": [
        {"age": "Birth", "height": "~50 cm"},
        {"age": "1 year", "height": "~75 cm"},
        {"age": "2 years", "height": "~85 cm"},
        {"age": "4 years", "height": "~100 cm"},
        {"age": "After 2 yrs", "height": "+5–6 cm/year till puberty"}
      ],
      "formula": "Height (cm) = Age × 6 + 77 [2–12 yrs]"
    },
    "head_circumference": {
      "expected": [
        {"age": "Birth", "hc": "~35 cm"},
        {"age": "6 months", "hc": "~43 cm"},
        {"age": "1 year", "hc": "~47 cm"},
        {"age": "2 years", "hc": "~49 cm"},
        {"age": "6 years", "hc": "~51–52 cm"}
      ],
      "note": "Most rapid HC growth occurs in first year (brain development phase)"
    },
    "muac": {
      "stable_age_range": "6 months to 5 years",
      "classification": [
        {"threshold": "<12.5 cm", "condition": "Moderate Acute Malnutrition"},
        {"threshold": "<11.5 cm", "condition": "Severe Acute Malnutrition"}
      ]
    },
    "bmi": {
      "classification": [
        {"percentile": "<5th", "category": "Underweight"},
        {"percentile": ">85th", "category": "Overweight"},
        {"percentile": ">95th", "category": "Obesity"}
      ],
      "note": "Uses WHO & IAP age-specific BMI centiles"
    }
  },
  "developmental_domains": [
    {"domain": "Gross motor", "examples": "Sitting, crawling, walking, running"},
    {"domain": "Fine motor", "examples": "Reaching, grasping, drawing"},
    {"domain": "Language", "examples": "Cooing, babbling, speaking"},
    {"domain": "Social/Personal", "examples": "Smiling, stranger anxiety, role play"},
    {"domain": "Cognitive", "examples": "Object permanence, problem solving"}
